{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": ["node_modules", "dist"],
  "rules": {
    "prettier/prettier": ["error"],
    "quotes": ["error", "double"],
    "no-console": "off"
  }
}
